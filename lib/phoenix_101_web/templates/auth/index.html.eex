<h1>Login</h1>

<%#= form_for @conn, auth_path(conn, :login), [name: :session], fn form -> %>
  <div class="form-group">
    <label>ユーザー名</label>
    <%#= username_input form, :username, class: "form-control" %>
  </div>

  <div class="form-group">
    <label>パスワード</label>
    <%#= password_input form, :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit "ログイン", class: "btn btn-primary" %>
  </div>
<%# end %>
